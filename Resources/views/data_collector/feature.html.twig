{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block toolbar %}
    {% set icon %}
        <span class="icon">{% include('@E7FeatureFlags/data_collector/switch-on.svg') %}</span>
        <span class="sf-toolbar-value">{{ collector.featurecount }}</span>
        <span class="sf-toolbar-label">Features</span>
    {% endset %}

    {% set text %}
        {# this is the content displayed when hovering the mouse over
           the toolbar panel #}
        <div class="sf-toolbar-info-piece">
            <b>Total:</b>
            <span class="sf-toolbar-status">{{ collector.featurecount }}</span>
        </div>

        <div class="sf-toolbar-info-piece">
            <b>Hits:</b>
            <span class="sf-toolbar-status">{{ collector.hits|length }}</span>
        </div>
    {% endset %}

    {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', { link: true }) }}
{% endblock %}

{% block menu %}
    <span class="label">
        <span class="icon">{% include('@E7FeatureFlags/data_collector/switch-on.svg') %}</span>
        <strong>
            Feature Flags <span class="count">{{ collector.featurecount }}</span>
        </strong>
    </span>
{% endblock %}

{% block panel %}
    <h2>Feature Flags</h2>

    <div class="metrics">
        <div class="metric">
            <span class="value">{{ collector.featurecount }}</span>
            <span class="label">Configured</span>
        </div>
        <div class="metric">
            <span class="value">{{ collector.hitcount }}</span>
            <span class="label">Requested</span>
        </div>
        <div class="metric">
            <span class="value">{{ collector.missingcount }}</span>
            <span class="label">Not Configured</span>
        </div>
    </div>

    <h3>Requested Feature Flags</h3>
    <table>
        <tr>
            <th>Feature</th>
            <th>Parent</th>
            <th class="text-center">Configured</th>
            <th class="text-center">isEnabled</th>
            <th class="text-center">Hits</th>
        </tr>

        {% for hit in collector.hits %}
            <tr>
                <td>{{ hit.name }}</td>
                <td>{{ hit.parent | default('[no parent]') }}</td>
                <td class="text-center">{{ hit.exists ? 'yes' : 'no' }}</td>
                <td class="text-center">{{ hit.is_enabled ? 'yes' : 'no' }}</td>
                <td class="text-center">{{ hit.count }}</td>
            </tr>
        {% endfor %}
    </table>

    <h3>Configured Features</h3>
    <table>
        <tr>
            <th>Feature</th>
            <th>Parent</th>
            <th>Conditions</th>
        </tr>

        {% for feature in collector.features %}
            <tr>
                <td>{{ feature.name }}</td>
                <td>{{ feature.parent | default('[no parent]') }}</td>
                <td>{{ feature.conditions }}</td>
            </tr>
        {% endfor %}
    </table>
        
    <div>
        Icons made by <a href="https://www.flaticon.com/authors/freepik" title="Freepik">Freepik</a>
        from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a>
    </div>
{% endblock %}
